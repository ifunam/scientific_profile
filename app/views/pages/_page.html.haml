%div{:class => 'row span-24 last'}
  %div{:class => 'span-18'}
    %b= page.title
    %p= raw textilize(truncate(page.body, :length => 200))
  %div{:class => 'span-2'}
    = page.image.nil? ? '-' : image_tag(page.image.file.url(:icon))
  %div{:class => 'span-4 actions last'}
    = link_to t(:show), page_path(:id => page.id)
    = link_to t(:delete), page_path(:id => page.id), :method => :delete, :confirm => 'Â¿ Desesas borrar este registo ?'