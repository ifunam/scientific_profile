= simple_form_for(@page, :html => {:multipart => true }) do |f|
  %div{:class => 'span-22 last'}
    = f.input :title
  %div{:class => 'span-22 last'}
    = f.input :body, :as => :text, :id => "markItUp"
  %div{:class => 'span-22 last'}
    = f.collection_select :navlink_section_id, Navlink.all_section_links, :id, :title_with_ancestors
  %div{:class => 'span-22 last'}
    = f.label :image
    = f.fields_for :image_attributes do |image_form|
      = image_form.file_field :file, :size => 20
  %div{:class => 'span-22 last'}
    = f.button :submit 
