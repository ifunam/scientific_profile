%h3=t('.title')
%div{ :id=>'collection', :class => 'span-24 section_left last'}
  %div{:class => 'span-24 row_title last'}
    %div{:class => 'span-18'}= t '.gallery'
    %div{:class => 'span-2'}= t '.image'
    %div{:class => 'span-3'}= t '.actions'
  = render :partial => @galleries
%div{:class => 'span-24 last'}
  = will_paginate @galleries

%div{:class => 'span-24 ui-buttons last'}
  = button_link_to t(:new), new_gallery_path
