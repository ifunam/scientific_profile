= simple_form_for(@gallery) do |f|
  %div{:class => 'span-22 last'}
    = f.input :title
  %div{:class => 'span-22 last'}
    = f.input :description, :as => :text, :size => "80x10"
  %div{:class => 'span-22 ui-buttons last'}
    = f.button :submit, :value => t(:save), :class => 'ui-state-default ui-corner-all button'
    = button_link_to t(:cancel), galleries_path
