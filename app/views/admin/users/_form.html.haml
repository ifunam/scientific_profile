%div{:class => 'span-11'}
  = f.input :email
%div{:class => 'span-11 last'}
  = f.association :group
%div{:class => 'span-11'}
  = f.input :password
%div{:class => 'span-11 last'}
  = f.input :password_confirmation
%div{:class => 'span-22 last'}
  = f.input :is_admin
%div{:class => 'span-22 ui-buttons last'}
  = f.button :submit, :value => t(:save), :class => 'ui-state-default ui-corner-all button'
  = button_link_to t(:cancel), admin_users_path