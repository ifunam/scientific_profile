= simple_form_for(@thesis, :html => {:multipart => true }) do |f|
  %div{:class => 'span-22 last'}
    = f.input :title, :as => :text, :input_html => { :size => "80x2" }
  %div{:class => 'span-22 last'}
    = f.input :authors, :as => :text, :input_html => { :size => "80x2" }
  %div{:class => 'span-11'}
    = f.association :academic_level
  %div{:class => 'span-11 last'}
    = f.input :career_name
  %div{:class => 'span-11'}
    = f.input :faculty_or_school
  %div{:class => 'span-11 last'}
    = f.association :institution
  %div{:class => 'span-11'}
    = f.input :start_year, :input_html => { :size => "4" }
  %div{:class => 'span-11 last'}
    = f.input :start_month, :input_html => { :size => "2" }
  %div{:class => 'span-11'}
    = f.input :end_year, :input_html => { :size => "4" }
  %div{:class => 'span-11 last'}
    = f.input :end_month, :input_html => { :size => "2" }
  %div{:class => 'span-11'}
    = f.label :is_finished, :class => 'my_label', :required => true
    = f.input :is_finished, :as => :radio, :label => false
  %div{:class => 'span-11 last'}
    = render :partial => 'user_theses/form', :locals => { :f => f }
  %div{:class => 'span-22 last'}
    = render :partial => 'documents/form', :locals => { :f => f }

  %div{:class => 'span-22 ui-buttons last'}
    = f.button :submit, :value => t(:save), :class => 'ui-state-default ui-corner-all button'
    = button_link_to t(:cancel), theses_path
