- if controller_name != 'sessions'
  = link_to "Entrar", new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Registrar nueva cuenta", new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "¿No recibiste las instrucciones de confirmación?", new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "¿No recibiste las intrucciones para desbloquear tu cuenta?", new_unlock_path(resource_name)
  %br/
